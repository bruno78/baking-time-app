<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_recipe_detail_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context="com.brunogtavares.bakingtime.ui.RecipeDetail.RecipeDetailActivity">

    <FrameLayout
        android:id="@+id/fl_ingredient_and_step_container"
        android:layout_weight="1"
        android:layout_width="@dimen/no_width"
        android:layout_height="match_parent"
        android:scaleType="centerInside" />

    <FrameLayout
        android:id="@+id/fl_step_detail_container"
        android:layout_weight="2"
        android:layout_width="@dimen/no_width"
        android:layout_height="match_parent" />

</LinearLayout>